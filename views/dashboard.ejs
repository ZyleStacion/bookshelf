<%- include ('partials/header', { title }) -%>

<div id="search" class="search">
    <form action="/searchBook" method="GET">
        <input type="text" id="query" name ="query" placeholder="Enter a book title or author"> <br>
        <fieldset>
            <legend>Please select a following type:</legend>
            <input type="radio" id="title" name="type">
            <label for="title">Title</label>
            <input type="radio" id="author" name="type">
            <label for="author">Author</label>
        </fieldset>
        <input type="submit" value="Submit">
    </form>
</div>

<div id="searchResults" class="searchResults" hidden>
    <!-- Pagination live search results that change with search query -->
</div>

<%- include ('partials/footer') -%>